<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/users.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (users.length > 0) { %>
            <div class="grid">
                <% for (let user of users) { %>
                    <article class="card user-item">
                        <div class="card__image">
                            <img src="<%= user.avatar %>"
                                alt="<%= user.firstName %>">
                        </div>
                        <div class="card__content">
                            <h1 class="user__title"><%= user.firstName %> <%= user.lastName %></h1>
                            <h4 class="user__subtitle"><%= user.jobTitle %></h4>
                            <h4 class="user__subtitle"><%= user.company %></h4>
                            <p class="user__info"><%= user.email %></p>
                            <p class="user__info"><%= user.phone %></p>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href="">Details</a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Users Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>